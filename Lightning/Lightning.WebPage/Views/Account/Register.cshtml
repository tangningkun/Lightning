@using Lightning.WebPage.Application;
@inject AppConfigurtaionServices appConfigurtaionServices

@{
    var title = appConfigurtaionServices.AppConfigurtaionValue("Appsettings:title");
    ViewBag.Title = title + "-用户注册";
    ViewBag.JsPath = "app/account/register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row"  style="margin:0 auto;text-align:center;">
    <div class="col-sm-8 col-sm-offset-2 text">
        <h1><strong>@title</strong> Register Form</h1>
        <div class="description">
            <p>
                This is a free responsive register form made with Bootstrap.Thank you very much for your use.
                <!-- Download it on <a href="#"><strong>AZMIND</strong></a>, customize and use it as you like! -->
            </p>
            <p>
              这是一个使用Bootstrap制作的免费响应式注册表单。非常感谢您的使用。
            </P>
        </div>
    </div>
</div>
<div class="row"  style="margin:0 auto;text-align:center;">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h4>Register to our site/注册我们的网站</h4>
                <p>Enter your username and password and confirm password to log on/输入您的用户名和密码以及确认密码注册:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>
        </div>
        <div class="form-bottom">
          <div class="form-group">
            <!-- <label class="sr-only" for="form-username">用户名:</label> -->
            <input type="text" name="UserName" placeholder="用户名  |  Username..." class="form-username form-control" id="form-username">
          </div>
          <div class="form-group">
            <!-- <label class="sr-only" for="form-password">密码:</label> -->
            <input type="password" name="Password" placeholder="密码  |  Password..." class="form-password form-control" id="form-password">
          </div>
          <div class="form-group">
            <!-- <label class="sr-only" for="form-password">确认密码:</label> -->
            <input type="password" name="ConfirmPassword" placeholder="确认密码  |  ConfirmPassword..." class="form-password form-control" id="form-confirmpassword">
          </div>
          <div class="row">
            <div class="col-sm-8" style="margin:0 auto;">
              <button type="submit" class="btn layui-btn layui-btn-fluid" id="btn-register">register in|注 册</button>
            </div>
          </div>
          <a href="~/account/login" class="btn"><h3>登录</h3></a>
        </div>
    </div>
</div>

