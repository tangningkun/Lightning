@using Lightning.WebPage.Application;
@inject AppConfigurtaionServices appConfigurtaionServices

@{
    //SetAntiForgeryCookie();
    var version = appConfigurtaionServices.AppConfigurtaionValue("Appsettings:version");
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 标题 -->
    <title>@ViewBag.Title</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <link href="~/Assets/css/form-elements.css" rel="stylesheet" />
    <link href="~/Assets/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/node_modules/bootstrapvalidator/dist/css/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="~/Assets/layui/css/layui.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="~/Assets/images/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Assets/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Assets/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Assets/images/ico/pple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Assets/images/ico/apple-touch-icon-57-precomposed.png">
    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        window.webapi = '@appConfigurtaionServices.AppConfigurtaionValue("Appsettings:webapi")';
        console.log('webapi', webapi);
        var islogin = true;
        var _version = @version;
        var _jsPath = '@(ViewBag.JsPath ?? string.Empty)';
    </script>
</head>
<body>
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                @RenderBody()
            </div>
        </div>

    </div>


    <!-- javascript-->
    <script src="~/Assets/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/Assets/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/jquery.backstretch.min.js"></script>
    <script src="~/Assets/js/scripts.js"></script>
    <script src="~/Assets/lib/require.js" type="text/javascript"></script>
    <script src="~/Assets/lib/config.js" type="text/javascript"></script>
    <script src="~/Assets/layui/layui.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
